<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- EditText para el Nombre -->
        <EditText
            android:id="@+id/etNamePT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para el Apellido -->
        <EditText
            android:id="@+id/etLastNamePT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para el Email -->
        <EditText
            android:id="@+id/etEmailPT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para el Teléfono -->
        <EditText
            android:id="@+id/etPhonePET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para la Especialidad -->
        <EditText
            android:id="@+id/etSpecialtyPET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Specialty"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>


        <!-- EditText para la Contraseña -->
        <EditText
            android:id="@+id/etPasswordPET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:padding="8dp"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para la URL de la Imagen -->
        <EditText
            android:id="@+id/etImageURLPET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image URL"
            android:padding="8dp"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <!-- Botón para Guardar el Perfil -->
        <Button
            android:id="@+id/btnSaveProfilePET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:textColor="#FFFFFF"
            android:background="#68A86B"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <!-- Fondo Verde debajo del Contenido Principal -->
    <LinearLayout
        android:id="@+id/bottomOptionsLayoutT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#68A86B"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Botones de la Barra Inferior -->
        <ImageButton
            android:id="@+id/btHomeT"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/bthome"
            android:contentDescription="Home"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/btStudents"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/bttutor"
            android:contentDescription="Students"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/btProfileT"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/btprofile"
            android:contentDescription="Profile"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/btCalendarT"
            android:layout_width="56dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/btcalendar"
            android:contentDescription="Calendar"/>

    </LinearLayout>

</RelativeLayout>
