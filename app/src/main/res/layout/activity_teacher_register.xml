<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etxNameTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <EditText
        android:id="@+id/etxLastnameTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lastname" />

    <EditText
        android:id="@+id/etxEmailTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email" />

    <EditText
        android:id="@+id/etxPasswordTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etxCellphoneTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cellphone" />

    <EditText
        android:id="@+id/etxSpecialtyTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Specialty" />

    <EditText
        android:id="@+id/etxImageTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image URL" />

    <Button
        android:id="@+id/btRegisterTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register" />

</LinearLayout>
