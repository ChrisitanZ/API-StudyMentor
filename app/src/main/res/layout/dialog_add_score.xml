<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNoteType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Nota"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNoteDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha (YYYY-MM-DD)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNoteScoreValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor de la Nota"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNoteStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estado"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnAddNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Nota" />
</LinearLayout>
