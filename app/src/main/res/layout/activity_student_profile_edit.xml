<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- EditText para el Nombre -->
        <EditText
            android:id="@+id/etNameP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para el Apellido -->
        <EditText
            android:id="@+id/etLastNameP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para el Email -->
        <EditText
            android:id="@+id/etEmailP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para el Teléfono -->
        <EditText
            android:id="@+id/etPhoneP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para el Género (invisible por defecto) -->
        <EditText
            android:id="@+id/etGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Genre"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para el Código (invisible por defecto) -->
        <EditText
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para la Contraseña (invisible por defecto) -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:padding="8dp"
            android:inputType="textPassword"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para la Fecha de Nacimiento -->
        <EditText
            android:id="@+id/etBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Birthday"
            android:padding="8dp"
            android:inputType="date"
            android:layout_marginBottom="8dp"/>

        <!-- EditText para la URL de la Imagen -->
        <EditText
            android:id="@+id/etImageURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image URL"
            android:padding="8dp"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <!-- Botón para Guardar el Perfil -->
        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <!-- Fondo Verde debajo del Contenido Principal -->
    <LinearLayout
        android:id="@+id/bottomOptionsLayoutT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#68A86B"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Botones de la Barra Inferior -->
        <ImageButton
            android:id="@+id/btHomeT"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/bthome"
            android:contentDescription="Home"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/btStudents"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/bttutor"
            android:contentDescription="Students"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/btProfileT"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/btprofile"
            android:contentDescription="Profile"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/btCalendarT"
            android:layout_width="56dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/btcalendar"
            android:contentDescription="Calendar"/>

    </LinearLayout>

</RelativeLayout>
