<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">



    <TextView
        android:id="@+id/tvNoteType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="8dp"
        android:text="Tipo"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvNoteDate"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvStudentName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvNoteDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/tvNoteType"
        app:layout_constraintTop_toTopOf="@+id/tvStudentName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvNoteScore"
        app:layout_constraintHorizontal_weight="1"
        android:paddingEnd="8dp" />

    <TextView
        android:id="@+id/tvNoteScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="20/20"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/tvNoteDate"
        app:layout_constraintTop_toTopOf="@+id/tvStudentName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvNoteStatus"
        app:layout_constraintHorizontal_weight="1"
        android:paddingEnd="8dp" />

    <TextView
        android:id="@+id/tvNoteStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/tvNoteScore"
        app:layout_constraintTop_toTopOf="@+id/tvStudentName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
