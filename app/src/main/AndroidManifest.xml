<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.studymentor">
    <!-- Permiso para acceso a internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyMentor"
        tools:targetApi="31">
        <activity
            android:name=".UI.Student.TutorSchedulesActivity"
            android:exported="false" />
        <!-- Actividad principal -->
        <activity
            android:name=".UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Actividades de Estudiante -->
        <activity
            android:name=".UI.Student.HomeStudentActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Student.StudentProfileActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Student.TutorListActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Student.StudentProfileEditActivity"
            android:exported="false" />
        <activity
            android:name=".StudentCalendarActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Student.StudentsReviewsListActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Student.SelectedTutorActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Student.ScoreActivity"
            android:exported="false" /> <!-- Actividades de Profesor -->
        <activity
            android:name=".UI.Tutor.HomeTutorActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Tutor.TutorProfileActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Tutor.StudentListActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Tutor.TutorProfileEditActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Tutor.TutorsReviewsListActivity"
            android:exported="false" />
        <activity
            android:name=".UI.Tutor.TutorCalendarActivity"
            android:exported="false" /> <!-- Otras actividades -->
        <activity
            android:name=".UI.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".UI.RegisterActivity"
            android:exported="false" />
    </application>

</manifest>